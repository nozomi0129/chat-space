.chat-main
  .chat-main__group-info
    .b-items
      .b-items__group__list
        .b-items__group__list__name
          = @group.name
        .b-items__group__list__menber
          = @group.users.name
      .b-items__group-edit
        =link_to edit_group_path (current_user) do 
          -# class: "group-edit-a" 
          Edit
  .chat-main__message-list
    = render @messages
        

  .chat-main__message-form
    .d-items-items__message
      = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
        .d-items-items__message__contents
          = f.text_field :content, class: 'd-items-items__message__contents__input', placeholder: 'type a message'
          = f.label :image, class: 'd-items-items__message__icon' do
            = icon'far', 'image', class: 'icom_d'
            = f.file_field :image, class: 'Hidden'
        = f.submit 'Send', class: 'd-items__send__botn'
        